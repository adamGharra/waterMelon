<Page
    x:Class="WM_AppNew.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WM_AppNew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="607.667" Height="704">

    <Grid Margin="0,0,-0.333,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="173*"/>
            <RowDefinition Height="467*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="Waiting"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Margin="40,23,232,68.333"
                   TextWrapping="Wrap" 
                   Text="Please turn on the Bluetooth to begin."
                   VerticalAlignment="Center" Height="99" Width="336" RenderTransformOrigin="40.498,50.46" FontSize="32"/>

        <Button x:ConnectionId='2'    x:Name="connectToBluetooth"
                   Content="Connect to BT"
                   HorizontalAlignment="Center"
                   Margin="49,138,397,0"
                   VerticalAlignment="Top"
                                              
                   Foreground="#FF2196F3"
                    Width="162" FontSize="12" FontWeight="Bold" Height="36"/>

        <TextBox x:ConnectionId='3'   x:Name="bluetoothStatus"
                   Margin="0,0,202,24.333"
                   TextWrapping="Wrap"
                   Text="Not connected"
                   VerticalAlignment="Bottom"
                   Width="108" HorizontalAlignment="Right"
                   Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF919191" Height="5" FontSize="12"/>

        <TextBlock x:ConnectionId='4' x:Name="Start"
                   HorizontalAlignment="Center"
                   Grid.Row="1"
                   Margin="45,53.667,213,364"
                   TextWrapping="Wrap" 
                   Text="now, click the button below to start."
                   VerticalAlignment="Center" Height="96" Width="350" RenderTransformOrigin="40.498,50.46" FontSize="32"/>

        <Button x:ConnectionId='5'    x:Name="letStart"
                   Content="Start"
                   HorizontalAlignment="Center"
                   Margin="57,164.667,389,0"
                   VerticalAlignment="Top"
                   Foreground="#FF2196F3"
                   Width="162" FontSize="12" FontWeight="Bold" Height="36"                        Grid.Row="1"/>

        <Button x:ConnectionId='6'    x:Name="Camera"
                   Content="Take Photo"
                   HorizontalAlignment="Center"
                   Margin="57,228.667,389,0"
                   VerticalAlignment="Top"
                   Foreground="#FF2196F3"
                   Width="162" FontSize="12" FontWeight="Bold" Height="36"                      Grid.Row="1" />

        <CheckBox x:ConnectionId='7' x:Name="checkBox" Content="Learnning?"
                  HorizontalAlignment="Left" Margin="290,159.667,0,0"
                  VerticalAlignment="Top" Height="37" 
                  Grid.Row="1"                         />

        <TextBox x:ConnectionId='8'   x:Name="checker"
                   Margin="0,0,82,314"
                   TextWrapping="Wrap"
                   Text=""
                   VerticalAlignment="Bottom"
                   Width="108" HorizontalAlignment="Right"
                   Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF919191" Height="5" FontSize="12" Grid.Row="1"/>

    </Grid>

</Page>

